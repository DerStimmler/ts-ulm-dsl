{
  "compilerOptions": {
    "target": "ES2018",
    "module": "NodeNext",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "stripInternal": true,
    "moduleResolution": "nodenext"
  },
  "include": [
    "src/**/*"
  ]
}
